#!/bin/sh

mkdir -p @CMAKE_CURRENT_BINARY_DIR@/libzmq/build
cd @CMAKE_CURRENT_BINARY_DIR@/libzmq/build
cmake \
 -DCMAKE_C_FLAGS="${CMAKE_C_FLAGS}" \
 -DCMAKE_CXX_FLAGS="${CMAKE_CXX_FLAGS}" \
 -DCMAKE_C_COMPILER=@CMAKE_C_COMPILER@ \
 -DCMAKE_CXX_COMPILER=@CMAKE_CXX_COMPILER@ \
 -DCMAKE_C_COMPILER_TARGET=@CMAKE_C_COMPILER_TARGET@ \
 -DCMAKE_CXX_COMPILER_TARGET=@CMAKE_CXX_COMPILER_TARGET@ \
 -DCMAKE_INSTALL_PREFIX="@CMAKE_CURRENT_BINARY_DIR@/libzmq/install" \
 -DWITH_OPENPGM=OFF \
 -DWITH_VMCI=OFF \
 -DZMQ_BUILD_FRAMEWORK=OFF \
 -DWITH_LIBSODIUM=ON \
 -DENABLE_CURVE=ON \
 -DENABLE_DRAFTS=ON \
 -DWITH_MILITANT=OFF \
 -DWITH_PERF_TOOL=OFF \
 -DBUILD_TESTS=OFF \
 -DENABLE_CPACK=OFF \
 -DBUILD_SHARED=OFF \
 -DBUILD_STATIC=ON \
 -DSODIUM_FOUND=ON \
 -DSODIUM_LIBRARIES=@SODIUM_LIBRARY@ \
 -DSODIUM_INCLUDE_DIRS=@SODIUM_INCLUDE_DIR@ \
 "@CMAKE_CURRENT_BINARY_DIR@/libzmq/src"
